@using Lib.core;
@using Lib.helper;

@using Bll;
@using Model;
@using Model.User;
@{
    Layout = null;

    var model = GetModel<UserModel>("model");
}

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- header page -->
    @Html.Partial(IncludePath("header"))
</head>

<body>
    @Html.Partial(IncludePath("body_top"))
    @Html.Partial(IncludePath("nav"))

    <div class="container" style="margin-top:20px;">

        <div class="row">
            <div class="col-md-9">
                @if (model != null)
                {
                    <div class="box">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="center" style="padding:30px 0;">
                                    <img src="@(model.GetUserImgUrl())" alt="用户头像" class="circle_radius"
                                         style="width:200px;height:200px;border:4px solid white;" />
                                </div>
                            </div>
                            <div class="col-md-8">
                                <form action="/user/UpdateUserMaskAction/" method="post" enctype="multipart/form-data">
                                    <div class="box_con">
                                        <div class="input-group">
                                            <input type="file" name="user_mask" class="form-control" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-primary">上传头像</button>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="alert alert-danger">
                                        只能上传512kb以下的图片文件！文件格式限制为： ".gif", ".png", ".jpg", ".jpeg"
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-3">
                @Html.Partial(IncludePath("user_menu"))
            </div>
        </div>

    </div>

</body>
</html>


