@using Hiwjcn.Framework.Provider;
@{
    Layout = null;
}

<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <!-- header page -->
    @Html.Partial(IncludePath("header"))
</head>

<body>


    <style type="text/css">
        .dropdown:hover > .dropdown-menu {
            display: block;
        }
    </style>

    <div id="nav_wrapper">
        <div class="navbar nav_cls z-depth-1" style="margin-bottom: 20px;">

            <div class="container">
                <!-- logo和折叠按钮 -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main_nav">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand logo-img-x" href="/page/home/" target="_self">
                        Auth后台管理（SSO）
                    </a>
                </div>

                <!-- 导航 -->
                <div class="collapse navbar-collapse" id="main_nav">

                    <ul class="nav navbar-nav navbar-right">
                        
                        @{ 
                            var loginuser =this.X.context.GetSSOLoginUser();
                        }

                        @if (loginuser != null)
                        {
                            <li>
                                <a href="#" target="_blank">
                                    <span class="fa fa-user"></span>
                                    <span>@(loginuser.UserName)</span>
                                </a>
                            </li>

                            <li>
                                <a href="/sso/logout" rel="nofollow" target="_self">
                                    <span class="fa fa-sign-out"></span>
                                    <span>退出</span>
                                </a>
                            </li>
                        }

                    </ul>

                </div>
            </div>

        </div>
    </div>

    <div class="container">
        <div class="row" style="margin-top:20px;">
            <div class="col-md-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Auth管理
                    </div>
                    <div class="list-group">
                        <a class="list-group-item" href="/AuthManage/Statics" target="_self">数据统计</a>
                        <a class="list-group-item" href="/AuthManage/Scopes" target="_self">功能块</a>
                        <a class="list-group-item" href="/AuthManage/Clients" target="_self">客户端</a>
                        <a class="list-group-item" href="/AuthManage/Users" target="_self">用户</a>
                        <a class="list-group-item" href="/AuthManage/Queues" target="_self">队列</a>
                        <a class="list-group-item" href="/AuthManage/Tasks" target="_self">定时任务</a>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>

</body>
</html>
